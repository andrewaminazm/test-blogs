<style>
  .about { max-width: 700px; margin: 0 auto; }

  /* HERO */
  .about-hero {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.75rem;
    flex-wrap: wrap;
  }

  .avatar-ring {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    padding: 2px;
    background: var(--grad1);
    flex-shrink: 0;
  }

  .avatar-inner {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: var(--surface);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--accent);
    letter-spacing: -0.02em;
  }

  .about-intro h1 {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 0.2rem;
  }

  .about-role {
    color: var(--accent);
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 0.2rem;
  }

  .about-location {
    color: var(--muted);
    font-size: 0.88rem;
  }

  /* LINKEDIN BADGE */
  .linkedin-wrap { margin-bottom: 2rem; }

  .linkedin-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.65rem 1.25rem;
    background: #0a66c2;
    color: #fff;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: background 0.15s, transform 0.15s;
  }

  .linkedin-badge:hover { background: #004182; transform: translateY(-1px); text-decoration: none; color: #fff; }

  .li-icon { width: 18px; height: 18px; }
  .ext-icon { width: 12px; height: 12px; opacity: 0.7; }

  /* SECTIONS */
  .about-section {
    margin-bottom: 2.5rem;
  }

  .about-section h2 {
    font-size: 1.15rem;
    font-weight: 700;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .about-section p { color: var(--muted2); margin-bottom: 0.75rem; line-height: 1.7; }
  .about-section p strong { color: var(--text); }

  /* STATS */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 0.75rem;
    margin-bottom: 2.5rem;
  }

  .stat-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.1rem;
    text-align: center;
  }

  .stat-num {
    display: block;
    font-size: 1.75rem;
    font-weight: 800;
    background: var(--grad1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    margin-bottom: 0.3rem;
  }

  .stat-label { font-size: 0.78rem; color: var(--muted); line-height: 1.4; }

  /* SKILLS */
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-chip {
    font-size: 0.82rem;
    padding: 0.3em 0.75em;
    background: var(--surface2);
    border: 1px solid var(--border2);
    border-radius: 6px;
    color: var(--muted2);
  }

  /* TIMELINE */
  .timeline { display: flex; flex-direction: column; gap: 1.5rem; }

  .timeline-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .tl-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--accent);
    flex-shrink: 0;
    margin-top: 0.45rem;
    box-shadow: 0 0 0 3px rgba(74,222,128,0.15);
  }

  .tl-title { font-weight: 700; font-size: 0.97rem; margin-bottom: 0.15rem; }
  .tl-company { font-size: 0.88rem; color: var(--accent2); margin-bottom: 0.15rem; }
  .tl-date { font-size: 0.82rem; color: var(--muted); margin-bottom: 0.4rem; }
  .tl-desc { font-size: 0.88rem; color: var(--muted2); line-height: 1.55; }

  /* CERTS */
  .cert-list { display: flex; flex-direction: column; gap: 0.75rem; }

  .cert-row {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--muted2);
    line-height: 1.55;
  }

  .cert-year {
    font-weight: 700;
    color: var(--accent);
    flex-shrink: 0;
    width: 2.5rem;
  }

  /* CONTACT */
  .contact-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.1rem;
    background: var(--surface);
    border: 1px solid var(--border2);
    border-radius: 8px;
    text-decoration: none;
    color: var(--text);
    font-size: 0.92rem;
    font-weight: 500;
    transition: border-color 0.15s, background 0.15s;
  }

  .contact-card:hover { border-color: var(--accent-dim); background: var(--surface2); text-decoration: none; }
  .contact-icon { width: 18px; height: 18px; color: var(--accent); }
</style>
