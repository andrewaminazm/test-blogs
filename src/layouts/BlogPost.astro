---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="post">
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      <p class="meta">
        <time datetime={frontmatter.pubDate.toISOString()}>
          {frontmatter.pubDate.toLocaleDateString('en-US', { dateStyle: 'long' })}
        </time>
        {frontmatter.author && <span> Â· {frontmatter.author}</span>}
      </p>
      {frontmatter.tags?.length ? (
        <ul class="tags" aria-label="Tags">
          {frontmatter.tags.map((tag) => (
            <li><a href={`/blog?tag=${tag}`}>{tag}</a></li>
          ))}
        </ul>
      ) : null}
    </header>
    <div class="post-body">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: 2rem;
  }

  .post-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.25;
  }

  .meta {
    color: var(--muted);
    font-size: 0.95rem;
    margin: 0;
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 0 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tags a {
    font-size: 0.85rem;
    color: var(--muted);
    text-decoration: none;
    padding: 0.2em 0.6em;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 6px;
  }

  .tags a:hover {
    color: var(--accent);
    border-color: var(--accent-dim);
  }

  .post-body {
    font-size: 1.05rem;
  }

  .post-body :global(h2) {
    margin-top: 2rem;
    font-size: 1.35rem;
  }

  .post-body :global(h3) {
    margin-top: 1.5rem;
    font-size: 1.15rem;
  }
</style>
