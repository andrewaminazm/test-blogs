---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Practical AI for software testers—prompts, tools, and real results.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=Outfit:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav-inner">
        <a href="/" class="logo">AI × Testing</a>
        <div class="nav-links">
          <a href="/">Blog</a>
          <a href="/prompts/">Prompts</a>
          <a href="/tools/">Tools</a>
          <a href="https://andrewcv.vercel.app/" target="_blank" rel="noopener noreferrer">Portfolio</a>
        </div>
      </nav>
    </header>
    <main class="main">
      <slot />
    </main>
    <footer class="site-footer">
      <p>Testing with AI — prompts, tools, and real results.</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0c0f14;
    --surface: #151a22;
    --border: #252d38;
    --text: #e6edf3;
    --muted: #8b949e;
    --accent: #3fb950;
    --accent-dim: #238636;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: 'Outfit', system-ui, sans-serif;
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .site-header {
    border-bottom: 1px solid var(--border);
    background: var(--surface);
  }

  .nav-inner {
    max-width: 720px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text);
    text-decoration: none;
  }

  .logo:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--muted);
    text-decoration: none;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: var(--accent);
  }

  .main {
    flex: 1;
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    width: 100%;
  }

  .site-footer {
    border-top: 1px solid var(--border);
    padding: 1.5rem;
    text-align: center;
    color: var(--muted);
    font-size: 0.9rem;
  }

  a {
    color: var(--accent);
  }

  a:hover {
    text-decoration: underline;
  }

  code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
    background: var(--surface);
    padding: 0.15em 0.4em;
    border-radius: 4px;
    border: 1px solid var(--border);
  }

  pre {
    overflow-x: auto;
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: var(--surface);
  }

  pre code {
    background: none;
    padding: 0;
    border: none;
  }

  blockquote {
    border-left: 3px solid var(--accent);
    margin: 1.5rem 0;
    padding-left: 1rem;
    color: var(--muted);
  }
</style>
